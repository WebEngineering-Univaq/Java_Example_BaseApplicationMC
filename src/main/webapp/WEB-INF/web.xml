<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>security.protect.patterns.role1</param-name>
        <!-- these pages are not public and accessible by users with role1 -->
        <param-value>/secured,/ultrasecured</param-value>
    </context-param>
    <context-param>
        <param-name>security.protect.patterns.role2</param-name>
        <!-- these pages are not public and accessible by users with role2 -->
        <param-value>/secured</param-value>
    </context-param>
     <context-param>
        <param-name>data.source</param-name>
        <param-value>jdbc/webdb2</param-value>
    </context-param>
    <listener>
        <listener-class>it.univaq.f4i.iw.framework.application.ApplicationInitializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homepage</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.HomepageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>secured</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.Secure1Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ultrasecured</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.Secure2Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>public</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.PublicController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>secured</servlet-name>
        <url-pattern>/secured</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ultrasecured</servlet-name>
        <url-pattern>/ultrasecured</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homepage</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>public</servlet-name>
        <url-pattern>/public</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>homepage</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/webdb2</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
